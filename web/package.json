{
  "name": "@urfmp/web",
  "version": "1.0.0",
  "description": "URFMP Dashboard - The Stripe of Robotics",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:comprehensive": "vitest src/tests/comprehensive.test.ts",
    "test:ci": "node test-runner.js --ci --coverage --bail",
    "test:all": "node test-runner.js",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "typecheck": "tsc --noEmit",
    "quality": "npm run typecheck && npm run lint && npm run test"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.24.6",
    "@types/leaflet": "^1.9.20",
    "@urfmp/sdk": "file:../packages/sdk",
    "@urfmp/types": "file:../packages/types",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "framer-motion": "^10.6.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.263.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.8.0",
    "recharts": "^2.5.0",
    "sonner": "^1.0.3",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@types/three": "^0.180.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.3",
    "vite": "^5.4.10",
    "vite-plugin-static-copy": "^3.1.2",
    "vitest": "^0.29.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
