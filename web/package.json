{
  "name": "@urfmp/web",
  "version": "1.0.0",
  "description": "URFMP Dashboard - The Stripe of Robotics",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:strict": "tsc && vite build",
    "build:ci": "tsc --project tsconfig.ci.json && vite build",
    "build:vercel": "vite build --config vite.config.prod.ts",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:comprehensive": "vitest src/tests/comprehensive.test.ts",
    "test:components": "vitest src/components/",
    "test:ci": "node test-runner.js --ci --coverage --bail",
    "test:all": "node test-runner.js",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:ci": "tsc --project tsconfig.ci.json --noEmit",
    "quality": "npm run typecheck && npm run lint && npm run test"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.24.6",
    "@types/leaflet": "^1.9.20",
    "@urfmp/sdk": "file:../packages/sdk",
    "@urfmp/types": "file:../packages/types",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.263.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.8.0",
    "recharts": "^2.5.0",
    "sonner": "^1.0.3",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
