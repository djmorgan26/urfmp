{
  "name": "urfmp",
  "version": "0.1.0",
  "description": "Universal Robot Fleet Management Platform - The Stripe of Robotics",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "adapters/*",
    "web"
  ],
  "scripts": {
    "dev": "docker-compose up -d && npm run dev:api",
    "dev:api": "npm run dev --workspace=@urfmp/api",
    "dev:web": "npm run dev --workspace=@urfmp/web",
    "build": "npm run build --workspaces",
    "build:vercel": "cd web && npm ci && vite build",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "npm run typecheck --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "migrate": "npm run migrate --workspace=@urfmp/api",
    "seed": "npm run seed --workspace=@urfmp/api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "rm -rf node_modules packages/*/node_modules services/*/node_modules adapters/*/node_modules web/node_modules"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
