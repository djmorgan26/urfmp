# Environment Configuration
NODE_ENV=development

# API Server Configuration
API_PORT=3000
API_HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://urfmp:urfmp-dev-2024@localhost:5432/urfmp
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_URL=amqp://urfmp:urfmp-dev-2024@localhost:5672
RABBITMQ_EXCHANGE=urfmp_events
RABBITMQ_QUEUE_TELEMETRY=robot_telemetry
RABBITMQ_QUEUE_COMMANDS=robot_commands

# ClickHouse Configuration (Optional - for high-volume analytics)
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=urfmp
CLICKHOUSE_USERNAME=urfmp
CLICKHOUSE_PASSWORD=urfmp-dev-2024

# Kafka Configuration (Optional - for event streaming)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=urfmp-api
KAFKA_TOPIC_TELEMETRY=robot-telemetry
KAFKA_TOPIC_EVENTS=robot-events

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_BURST_REQUESTS=20

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/urfmp.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# Monitoring & Observability
TRACE_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# External API Keys (for robot vendor integrations)
UNIVERSAL_ROBOTS_API_KEY=your-ur-api-key-here
KUKA_API_KEY=your-kuka-api-key-here
ABB_API_KEY=your-abb-api-key-here

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=notifications@urfmp.com
SMTP_PASSWORD=your-smtp-password

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_STORAGE_PATH=./uploads

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_ROBOT_STATUS=30
CACHE_TTL_TELEMETRY=10

# Background Jobs
JOB_CONCURRENCY=5
JOB_ATTEMPTS=3
JOB_BACKOFF_TYPE=exponential
JOB_BACKOFF_DELAY=2000

# Development Only
DEV_ENABLE_SWAGGER=true
DEV_ENABLE_PLAYGROUND=true
DEV_MOCK_ROBOTS=true